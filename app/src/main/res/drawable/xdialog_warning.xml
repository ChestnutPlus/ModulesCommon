<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--布局-->
    <item>
        <shape android:shape="rectangle">
            <size android:height="70dp" android:width="70dp"/>
            <solid android:color="#009b9595"/>
        </shape>
    </item>

    <!--环-->
    <item>
        <shape android:shape="ring" android:thickness="3dp" android:useLevel="false" android:innerRadius="30.5dp">
            <solid android:color="#ed7b17"/>
        </shape>
    </item>

    <!--叹号上面长方条-->
    <item android:top="9dp" android:bottom="18dp" android:left="32dp" android:right="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#ed7b17"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!--叹号下方圆点-->
    <item android:top="55dp" android:bottom="8dp" android:left="31dp" android:right="31dp">
        <shape android:shape="oval">
            <solid android:color="#ed7b17"/>
        </shape>
    </item>
</layer-list>