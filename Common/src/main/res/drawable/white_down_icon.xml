<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--制定布局大小-->
    <item>
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="40dp"/>
            <corners android:radius="1dp"/>
            <solid android:color="#00e7a9a9"/>
        </shape>
    </item>

    <!--第1个长方形-->
    <item android:top="4dp" android:left="15dp" android:right="15dp" android:bottom="35dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_down_icon"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>

    <!--第2个长方形-->
    <item android:top="7dp" android:left="15dp" android:right="15dp" android:bottom="31dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_down_icon"/>
            <corners android:radius="0.1dp"/>
        </shape>
    </item>

    <!--第3个长方形-->
    <item android:top="11dp" android:left="15dp" android:right="15dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_down_icon"/>
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp"/>
        </shape>
    </item>

    <!--箭头右-->
    <item android:bottom="17dp" android:top="18dp" android:right="7.5dp" android:left="16dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/arrow_white"/>
                <corners android:topRightRadius="15dp" android:bottomLeftRadius="2dp"/>
            </shape>
        </rotate>
    </item>

    <!--填充物-->
    <item android:top="15dp" android:left="12dp" android:right="12dp" android:bottom="18dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/arrow_white"/>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>

    <!--箭头左-->
    <item android:bottom="17dp" android:top="18dp" android:left="7.5dp" android:right="16dp">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/arrow_white"/>
                <corners android:topLeftRadius="15dp" android:bottomRightRadius="2dp"/>
            </shape>
        </rotate>
    </item>

    <!--底左-->
    <item android:top="24dp" android:left="3dp" android:right="32dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_down_icon"/>
            <corners android:bottomLeftRadius="0.1dp" android:topRightRadius="1dp" android:topLeftRadius="1dp"/>
        </shape>
    </item>

    <!--底中-->
    <item android:top="31dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_down_icon"/>
        </shape>
    </item>

    <!--底右-->
    <item android:top="24dp" android:left="32dp" android:right="3dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_down_icon"/>
            <corners android:bottomRightRadius="0.1dp" android:topRightRadius="1dp" android:topLeftRadius="1dp"/>
        </shape>
    </item>
</layer-list>